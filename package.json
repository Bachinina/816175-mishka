{
  "name": "mishka",
  "version": "15.0.0",
  "private": true,
  "description": "Личный проект «Мишка» от HTML Academy",
  "devDependencies": {
    "autoprefixer": "9.1.x",
    "browser-sync": "2.24.x",
    "gulp": "3.9.1",
    "gulp-csso": "^3.0.1",
    "gulp-imagemin": "^4.1.0",
    "gulp-plumber": "1.2.x",
    "gulp-postcss": "8.0.x",
    "gulp-rename": "^1.2.2",
    "gulp-svgstore": "^6.1.1",
    "gulp-webp": "^3.0.0",
    "run-sequence": "^2.2.1",
    "gulp-less": "4.0.x",
    "@htmlacademy/editorconfig-cli": "1.x",
    "stylelint": "9.6.x",
